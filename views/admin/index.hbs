
    <div id="wrapper">
      {{>navbarAdmin}}

        <!-- Page Content -->
        <div id="page-wrapper">
                <div class="space"></div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                DataTables Advanced Tables
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Anime</th>
                                            <th>Description</th>
                                            <th>Image</th>
                                            <th>Total Video</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each posts}}
                                        <tr class="odd gradeX">
                                            <td>1</td>
                                            <td>{{this.name}}</td>
                                            <td>
                                                <p style="overflow:hidden;">{{this.description}}</p>
                                            </td>
                                            <td><img src='{{this.url_image}}' alt='' style="width:150px; height:auto;"/></td>
                                            <td class="center">X</td>
                                            <td>
                                                <a href="/admin/addEpisode/{{this.name_slug}}">
                                                    <button type="button" class="btn btn-success">Add Episode</button>
                                                </a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                        
                                    </tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->>
        <!-- /#page-wrapper -->
        </div>
        <!-- /#page-wrapper -->  
    </div>
    {{>footer}}